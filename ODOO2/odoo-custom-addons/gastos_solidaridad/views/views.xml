<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gastos_solidaridad.list">
      <field name="name">GastosSolidaridad list</field>
      <field name="model">gastos_solidaridad.gastos_solidaridad</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gastos_solidaridad.action_window">
      <field name="name">GastosSolidaridad window</field>
      <field name="res_model">gastos_solidaridad.gastos_solidaridad</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="gastos_solidaridad.action_server">
      <field name="name">GastosSolidaridad server</field>
      <field name="model_id" ref="model_gastos_solidaridad_gastos_solidaridad"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="GastosSolidaridad" id="gastos_solidaridad.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="gastos_solidaridad.menu_1" parent="gastos_solidaridad.menu_root"/>
    <menuitem name="Menu 2" id="gastos_solidaridad.menu_2" parent="gastos_solidaridad.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="gastos_solidaridad.menu_1_list" parent="gastos_solidaridad.menu_1"
              action="gastos_solidaridad.action_window"/>
    <menuitem name="Server to list" id="gastos_solidaridad" parent="gastos_solidaridad.menu_2"
              action="gastos_solidaridad.action_server"/>

  </data>
</odoo>