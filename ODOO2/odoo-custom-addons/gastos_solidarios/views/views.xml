<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gastos_solidarios.list">
      <field name="name">GastosSolidarios list</field>
      <field name="model">gastos_solidarios.gastos_solidarios</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gastos_solidarios.action_window">
      <field name="name">GastosSolidarios window</field>
      <field name="res_model">gastos_solidarios.gastos_solidarios</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="gastos_solidarios.action_server">
      <field name="name">GastosSolidarios server</field>
      <field name="model_id" ref="model_gastos_solidarios_gastos_solidarios"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="GastosSolidarios" id="gastos_solidarios.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="gastos_solidarios.menu_1" parent="gastos_solidarios.menu_root"/>
    <menuitem name="Menu 2" id="gastos_solidarios.menu_2" parent="gastos_solidarios.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="gastos_solidarios.menu_1_list" parent="gastos_solidarios.menu_1"
              action="gastos_solidarios.action_window"/>
    <menuitem name="Server to list" id="gastos_solidarios" parent="gastos_solidarios.menu_2"
              action="gastos_solidarios.action_server"/>

  </data>
</odoo>