<odoo>
  <data>

  <!-- Acciones -->

    <record model="ir.actions.act_window" id="action_open_impact_list">
      <field name="name">Lista de impactos</field>
      <field name="res_model">impacto_social.impact</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_open_beneficiary_list">
      <field name="name">Lista de beneficiarios del Impacto</field>
      <field name="res_model">impacto_social.beneficiary</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_open_indicator_list">
      <field name="name">Lista de indicadores de impacto</field>
      <field name="res_model">impacto_social.indicator</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_open_result_graph">
  <field name="name">Gráfico de resultados del Impacto</field>
  <field name="res_model">impacto_social.result</field>
  <field name="view_mode">graph</field>
  <field name="help" type="html">
    <p class="oe_view_nocontent_create">
      Haz clic en el botón "Crear" para agregar un nuevo resultado.
    </p>
  </field>
</record>

    <!-- Vistas de formulario -->

    <record model="ir.ui.view" id="impacto_social.form">
      <field name="name">ImpactoSocial form</field>
      <field name="model">impacto_social.impact</field>
      <field name="arch" type="xml">
          <form string="Impacto Social">
              <sheet>
                  <group>
                      <field name="name"/>
                      <field name="description"/>
                      <field name="project_id"/>
                      <field name="indicator_ids" widget="many2many_tags"/>
                      <field name="result_ids" widget="many2many_tags"/>
                  </group>
              </sheet>
          </form>
      </field>
    </record>


    <record model="ir.ui.view" id="impacto_social_indicator_form_view">
      <field name="name">Indicador de Impacto Formulario</field>
      <field name="model">impacto_social.indicator</field>
      <field name="arch" type="xml">
        <form string="Indicador de Impacto">
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
              <field name="target_value"/>
              <field name="achieved_value"/>
              <field name="impact_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="impacto_social_result_form_view">
      <field name="name">Resultado del Impacto Formulario</field>
      <field name="model">impacto_social.result</field>
      <field name="arch" type="xml">
        <form string="Resultado del Impacto">
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
              <field name="date"/>
              <field name="value"/>
              <field name="indicator_id"/>
              <field name="impact_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="impacto_social_beneficiary_form_view">
      <field name="name">Beneficiario del Impacto Formulario</field>
      <field name="model">impacto_social.beneficiary</field>
      <field name="arch" type="xml">
        <form string="Beneficiario del Impacto">
          <sheet>
            <group>
              <field name="name"/>
              <field name="email"/>
              <field name="phone"/>
              <field name="impact_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="impacto_social.action_server">
      <field name="name">ImpactoSocial server</field>
      <field name="model_id" ref="model_impacto_social_impact"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <menuitem name="ImpactoSocial" id="impacto_social.menu_root"/>

    <menuitem name="Impactos" id="impacto_social.menu_1" parent="impacto_social.menu_root"/>
    <menuitem name="Beneficiarios" id="impacto_social.menu_2" parent="impacto_social.menu_root"/>
    <menuitem name="Indicadores" id="impacto_social.menu_3" parent="impacto_social.menu_root"/>
    <menuitem name="Resultados" id="impacto_social.menu_4" parent="impacto_social.menu_root"/>
            
    <!-- Acciones -->

    <menuitem name="Ver Impactos" id="impacto_social.menu_1_list" parent="impacto_social.menu_1"
        action="action_open_impact_list"/>
    <menuitem name="Ver Beneficiarios" id="impacto_social.menu_2_list" parent="impacto_social.menu_2"
        action="action_open_beneficiary_list"/>
    <menuitem name="Ver Indicadores" id="impacto_social.menu_3_list" parent="impacto_social.menu_3"
        action="action_open_indicator_list"/>
    <menuitem name="Ver Resultados (Gráfico)" id="impacto_social.menu_4_graph" parent="impacto_social.menu_4"
    action="action_open_result_graph"/>


  </data>
</odoo>