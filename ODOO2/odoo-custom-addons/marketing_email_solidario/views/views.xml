<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="marketing_email_solidario.list">
      <field name="name">MarketingEmailSolidario list</field>
      <field name="model">marketing_email_solidario.marketing_email_solidario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="marketing_email_solidario.action_window">
      <field name="name">MarketingEmailSolidario window</field>
      <field name="res_model">marketing_email_solidario.marketing_email_solidario</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="marketing_email_solidario.action_server">
      <field name="name">MarketingEmailSolidario server</field>
      <field name="model_id" ref="model_marketing_email_solidario_marketing_email_solidario"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="MarketingEmailSolidario" id="marketing_email_solidario.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="marketing_email_solidario.menu_1" parent="marketing_email_solidario.menu_root"/>
    <menuitem name="Menu 2" id="marketing_email_solidario.menu_2" parent="marketing_email_solidario.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="marketing_email_solidario.menu_1_list" parent="marketing_email_solidario.menu_1"
              action="marketing_email_solidario.action_window"/>
    <menuitem name="Server to list" id="marketing_email_solidario" parent="marketing_email_solidario.menu_2"
              action="marketing_email_solidario.action_server"/>

  </data>
</odoo>