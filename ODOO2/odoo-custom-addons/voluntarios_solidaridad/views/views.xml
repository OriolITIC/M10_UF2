<odoo>
    <data>   

        <!-- Actions -->

        <record model="ir.actions.act_window" id="voluntarios_solidaridad.volunteers">
            <field name="name">Voluntarios Esperanza Solidarida</field>
            <field name="res_model">voluntarios_solidaridad.volunteer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="voluntarios_solidaridad.activities">
            <field name="name">Actividades Esperanza Solidarida</field>
            <field name="res_model">voluntarios_solidaridad.activity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="voluntarios_solidaridad.departments">
            <field name="name">Departamentos Esperanza Solidarida</field>
            <field name="res_model">voluntarios_solidaridad.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="voluntarios_solidaridad.datos_grafico">
            <field name="name">Gráfico</field>
            <field name="res_model">voluntarios_solidaridad.estadistica</field>
            <field name="view_mode">graph</field>
        </record>


        <!-- Views -->

        <record id="volunteer_form_view" model="ir.ui.view">
            <field name="name">voluntarios_solidaridad.volunteer.form</field>
            <field name="model">voluntarios_solidaridad.volunteer</field>
            <field name="arch" type="xml">
                <form string="Voluntario">
                    <sheet>
                        <group>
                            <field name="photo" widget='image'/>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="city"/>
                            <field name="department_id"/>
                        </group>
                        <group string="Actividades">
                            <field name="activities_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="activity_form_view" model="ir.ui.view">
            <field name="name">voluntarios_solidaridad.activity.form</field>
            <field name="model">voluntarios_solidaridad.activity</field>
            <field name="arch" type="xml">
                <form string="Actividad">
                    <sheet>
                        <group>
                            <field name="name" string="Nombre"/>
                        </group>
                        <group string="Voluntarios">
                            <field name="volunteer_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="department_form_view" model="ir.ui.view">
            <field name="name">voluntarios_solidaridad.department.form</field>
            <field name="model">voluntarios_solidaridad.department</field>
            <field name="arch" type="xml">
                <form string="Departamento">
                    <sheet>
                        <group>
                            <field name="name" string="Nombre"/>
                            <field name="code" string="Codigo"/>
                            <field name="phone" string="Telefono"/>
                        </group>
                        <group string="Voluntarios">
                            <field name="volunteer_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="datos_grafico_graph_view" model="ir.ui.view">
            <field name="name">voluntarios_solidaridad.datos_grafico.graph</field>
            <field name="model">voluntarios_solidaridad.estadistica</field>
            <field name="arch" type="xml">
                <graph string="Gráfico de Voluntarios por Departamento" type="bar">
                    <field name="volunteer_count" string="Número de Voluntarios"/>
                    <field name="department_id" string="Departamento"/>
                </graph>
            </field>
        </record>


        <!-- Server Action -->

        <record model="ir.actions.server" id="voluntarios_solidaridad.action_server">
            <field name="name">VoluntariosSolidaridad server</field>
            <field name="model_id" ref="model_voluntarios_solidaridad_volunteer"/> <!-- Reemplaza con el modelo correcto -->
            <field name="state">code</field>
            <field name="code">
                action = {
                    "type": "ir.actions.act_window",
                    "view_mode": "tree,form",
                    "res_model": model._name,
                }
            </field>
        </record>


        <!-- Top Menu Item -->

        <menuitem name="VoluntariosSolidaridad" id="voluntarios_solidaridad.menu_root"/>

        <menuitem name="Voluntarios" id="voluntarios_solidaridad.menu_1" parent="voluntarios_solidaridad.menu_root"/>
        <menuitem name="Actividades" id="voluntarios_solidaridad.menu_2" parent="voluntarios_solidaridad.menu_root"/>
        <menuitem name="Departamentos" id="voluntarios_solidaridad.menu_3" parent="voluntarios_solidaridad.menu_root"/>
        <menuitem name="Estadisticas" id="voluntarios_solidaridad.menu_4" parent="voluntarios_solidaridad.menu_root" 
            action="voluntarios_solidaridad.datos_grafico"/>
        
        <!-- Acciones -->

        <menuitem name="Ver Voluntarios" id="voluntarios_solidaridad.menu_1_list" parent="voluntarios_solidaridad.menu_1"
            action="voluntarios_solidaridad.volunteers"/>
        <menuitem name="Ver Actividades" id="voluntarios_solidaridad.menu_2_list" parent="voluntarios_solidaridad.menu_2"
            action="voluntarios_solidaridad.activities"/>
        <menuitem name="Ver Departamentos" id="voluntarios_solidaridad.menu_3_list" parent="voluntarios_solidaridad.menu_3"
            action="voluntarios_solidaridad.departments"/>
        <menuitem name="Gráfico" id="voluntarios_solidaridad.menu_grafico" parent="voluntarios_solidaridad.menu_4" 
            action="voluntarios_solidaridad.datos_grafico"/>

    </data>
</odoo>