    <menuitem id="menu_create_income" name="Ver Ingresos" parent="menu_incomes" action="action_incomes"/>







   <!-- Submenús para Voluntarios -->
   <menuitem id="menu_volunteers" name="Voluntarios" parent="menu_email_marketing" action="action_volunteers"/>
