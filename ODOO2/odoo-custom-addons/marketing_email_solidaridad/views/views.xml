       <field name="res_model">account.expense</field>
       <field name="view_mode">tree,form</field>
   </record>
  <!-- Acciones -->
    <!-- Acción para ver la lista de campañas -->
    <record id="action_campaigns" model="ir.actions.act_window">
        <field name="name">Campañas</field>
        <field name="res_model">campaign.management.campaign</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_campaign_tree"/>
    </record>

    <!-- Acción para crear una nueva campaña -->
    <record id="action_create_campaign" model="ir.actions.act_window">
        <field name="name">Crear Campaña</field>
        <field name="res_model">campaign.management.campaign</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_campaign_form"/>
        <field name="target">current</field>
    </record>

    <!-- Acción para ver la lista de voluntarios -->
    <record id="action_volunteers" model="ir.actions.act_window">
        <field name="name">Voluntarios</field>
        <field name="res_model">volunteer.volunteer</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_volunteer_tree"/>
    </record>

    <!-- Acción para crear un nuevo voluntario -->
    <record id="action_create_volunteer" model="ir.actions.act_window">
        <field name="name">Crear Voluntario</field>
        <field name="res_model">volunteer.volunteer</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_volunteer_form"/>
        <field name="target">current</field>
    </record>


    <record id="action_incomes" model="ir.actions.act_window">
      <field name="name">Lista de Ingresos</field>
      <field name="res_model">account.income</field>
      <field name="view_mode">tree,form</field>
    </record>

<!-- Acción para crear un nuevo ingreso -->
<record id="action_create_income" model="ir.actions.act_window">
