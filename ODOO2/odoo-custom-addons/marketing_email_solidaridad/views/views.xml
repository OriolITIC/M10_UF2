<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista tree para account.expense -->
    <record id="view_expense_tree" model="ir.ui.view">
        <field name="name">account.expense.tree</field>
        <field name="model">account.expense</field>
        <field name="arch" type="xml">
            <tree string="Gastos">
                <field name="date" string="Fecha del Gasto"/>
                <field name="amount" string="Cantidad del Gasto"/>
                <field name="description" string="Descripción"/>
           
            </tree>
        </field>
    </record>

    <!-- Vista form para account.expense -->
    <record id="view_expense_form" model="ir.ui.view">
        <field name="name">account.expense.form</field>
        <field name="model">account.expense</field>
        <field name="arch" type="xml">
            <form string="Gasto">
                <sheet>
                    <group>
                        <field name="date" string="Fecha del Gasto"/>
                        <field name="amount" string="Cantidad del Gasto"/>
                        <field name="description" string="Descripción"/>
                    </group>
                   
                </sheet>
            </form>
        </field>
    </record>

   <!-- Vista tree para accounting.donante -->
   <record id="view_donante_tree" model="ir.ui.view">
       <field name="name">accounting.donante.tree</field>
       <field name="model">accounting.donante</field>
       <field name="arch" type="xml">
           <tree string="Donantes">
               <field name="name" string="Nombre del Donante"/>
               <field name="email" string="Correo Electrónico"/>
               <field name="phone" string="Teléfono"/>
               <field name="fecha_donacion" string="Fecha de la Donación"/>
               <field name="tipo_donacion" string="Tipo de Donación"/>
               <field name="cantidad_dinero" string="Cantidad de Dinero"/>
               <field name="uso_especifico" string="Uso Específico"/>
         
           </tree>
       </field>
   </record>

   <!-- Vista form para accounting.donante -->
   <record id="view_donante_form" model="ir.ui.view">
       <field name="name">accounting.donante.form</field>
       <field name="model">accounting.donante</field>
       <field name="arch" type="xml">
           <form string="Donante">
               <sheet>
                   <group>
                       <field name="name" string="Nombre del Donante"/>
                       <field name="email" string="Correo Electrónico"/>
                       <field name="phone" string="Teléfono"/>
                   </group>
                   <group>
                       <field name="fecha_donacion" string="Fecha de la Donación"/>
                       <field name="tipo_donacion" string="Tipo de Donación"/>
                       <field name="cantidad_dinero" string="Cantidad de Dinero" attrs="{'invisible': [('tipo_donacion', '!=', 'dinero')]}"/>
                       <field name="descripcion_donacion" string="Descripción de la Donación"/>
                       <field name="uso_especifico" string="Uso Específico"/>
                    
                   </group>
               </sheet>
           </form>
       </field>
   </record>

 



    

 

   <!-- Vista tree para account.income -->
<record id="view_income_tree" model="ir.ui.view">
    <field name="name">account.income.tree</field>
    <field name="model">account.income</field>
    <field name="arch" type="xml">
        <tree string="Ingresos">
            <field name="date" string="Fecha del Ingreso"/>
            <field name="amount" string="Cantidad del Ingreso"/>
            <field name="description" string="Descripción"/>
            <field name="tipo_donacion" string="Tipo de Donación"/>
            <field name="cantidad_dinero" string="Cantidad de Dinero"/>
        </tree>
    </field>
</record>

<!-- Vista form para account.income -->
<record id="view_income_form" model="ir.ui.view">
    <field name="name">account.income.form</field>
    <field name="model">account.income</field>
    <field name="arch" type="xml">
        <form string="Ingreso">
            <sheet>
                <group>
                    <field name="date" string="Fecha del Ingreso"/>
                    <field name="amount" string="Cantidad del Ingreso"/>
                    <field name="description" string="Descripción"/>
                </group>
                <group>
                    <field name="tipo_donacion" string="Tipo de Donación"/>
                    <field name="cantidad_dinero" string="Cantidad de Dinero"/>
                </group>
            </sheet>
        </form>
    </field>
</record>




 <!-- Vistas para Campañas -->
    <record id="view_campaign_tree" model="ir.ui.view">
        <field name="name">campaign.management.campaign.tree</field>
        <field name="model">campaign.management.campaign</field>
        <field name="arch" type="xml">
            <tree string="Campañas">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="view_campaign_form" model="ir.ui.view">
        <field name="name">campaign.management.campaign.form</field>
        <field name="model">campaign.management.campaign</field>
        <field name="arch" type="xml">
            <form string="Campaña">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="volunteers"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vistas para Voluntarios -->
    <record id="view_volunteer_tree" model="ir.ui.view">
        <field name="name">volunteer.volunteer.tree</field>
        <field name="model">volunteer.volunteer</field>
        <field name="arch" type="xml">
            <tree string="Voluntarios">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_volunteer_form" model="ir.ui.view">
        <field name="name">volunteer.volunteer.form</field>
        <field name="model">volunteer.volunteer</field>
        <field name="arch" type="xml">
            <form string="Voluntario">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="campaign_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!-- Modifica la vista tree de voluntarios para mostrar las campañas asignadas -->
<record id="view_volunteer_tree" model="ir.ui.view">
    <field name="name">volunteer.volunteer.tree</field>
    <field name="model">volunteer.volunteer</field>
    <field name="arch" type="xml">
        <tree string="Voluntarios">
            <field name="name"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="campaign_ids" widget="many2many_tags"/>
        </tree>
    </field>
</record>


    <record id="view_campaign_form" model="ir.ui.view">
        <field name="name">campaign.management.campaign.form</field>
        <field name="model">campaign.management.campaign</field>
        <field name="arch" type="xml">
            <form string="Campaña">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="volunteers"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!-- Modifica la vista tree de campañas para mostrar los voluntarios -->
<record id="view_campaign_tree" model="ir.ui.view">
    <field name="name">campaign.management.campaign.tree</field>
    <field name="model">campaign.management.campaign</field>
    <field name="arch" type="xml">
        <tree string="Campañas">
            <field name="name"/>
            <field name="description"/>

            <field name="start_date"/>
            <field name="end_date"/>
            <field name="volunteers" widget="many2many_tags"/>
        </tree>
    </field>
</record>


    <record id="view_volunteer_form" model="ir.ui.view">
        <field name="name">volunteer.volunteer.form</field>
        <field name="model">volunteer.volunteer</field>
        <field name="arch" type="xml">
            <form string="Voluntario">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="campaign_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


   <!-- Acción para abrir el formulario de creación de donantes -->
   <record id="action_create_donante" model="ir.actions.act_window">
       <field name="name">Crear Donante</field>
       <field name="res_model">accounting.donante</field>
       <field name="view_mode">form</field>
       <field name="view_id" ref="view_donante_form"/>
       <field name="target">current</field>
   </record>

   <!-- Acción para abrir la lista de donantes -->
   <record id="action_donantes" model="ir.actions.act_window">
       <field name="name">Lista de Donantes</field>
       <field name="res_model">accounting.donante</field>
       <field name="view_mode">tree,form</field>
   </record>

<!-- Acción para abrir el formulario de creación de gastos -->
   <record id="action_create_expense" model="ir.actions.act_window">
       <field name="name">Crear Gasto</field>
       <field name="res_model">account.expense</field>
       <field name="view_mode">form</field>
       <field name="view_id" ref="view_expense_form"/>
