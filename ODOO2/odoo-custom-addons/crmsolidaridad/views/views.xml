
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="crmsolidaridad.list">
      <field name="name">Custom CRM Client Tree View</field>
      <field name="model">custom.crm.client</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="email"/>
          <field name="phone"/>
          <field name="client_type"/>
        
        </tree>
      </field>
    </record>

     <record model="ir.ui.view" id="crmsolidaridad.donantes_list">
      <field name="name">Custom CRM Donante Tree View</field>
      <field name="model">donaciones.crm.donante</field>
      <field name="arch" type="xml">
        <tree>
        
          <field name="mayor_que_18"/>          
        
        </tree>
      </field>
    </record>

        <record model="ir.ui.view" id="crmsolidaridad.voluntarios_list">
      <field name="name">Custom CRM Voluntario Tree View</field>
      <field name="model">voluntarios.crm.volunteer</field>
      <field name="arch" type="xml">
        <tree>
          
          <field name="mayor_que_18"/>     
          <field name="last_volunteer_date"/>     
        
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="crmsolidaridad.volunteer_action_window">
      <field name="name">Voluntarios</field>
      <field name="res_model">voluntarios.crm.volunteer</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="crmsolidaridad.donante_action_window">
      <field name="name">Donantes</field>
      <field name="res_model">donaciones.crm.donante</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="crmsolidaridad.action_window">
      <field name="name">Clientes</field>
      <field name="res_model">custom.crm.client</field>
      <field name="view_mode">tree,form</field>
    </record>







    <!-- server action to the one above -->

    <record model="ir.actions.server" id="crmsolidaridad.action_server">
      <field name="name">CRMSolidaridad server</field>
      <field name="model_id" ref="model_crmsolidaridad_crmsolidaridad"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="CRMSolidaridad" id="crmsolidaridad.menu_root"/>

    <!-- menu categories -->

    
    <menuitem name="Contactos" id="crmsolidaridad.contactos" parent="crmsolidaridad.menu_root"
    action="crmsolidaridad.action_window"
       />
    <menuitem name="Donaciones" id="crmsolidaridad.donaciones" parent="crmsolidaridad.menu_root"/>
     
   <menuitem name="Campañas" id="crmsolidaridad.menu_campañas" parent="crmsolidaridad.menu_root"/>
     

               <menuitem name="Voluntarios" id="crmsolidaridad.voluntarios_menu" parent="crmsolidaridad.contactos"
              action="crmsolidaridad.volunteer_action_window"/>
               <menuitem name="Donantes" id="crmsolidaridad.donantes_menu" parent="crmsolidaridad.contactos"
              action="crmsolidaridad.donante_action_window"/>
           
       <menuitem name="Educación" id="menu_campaña_educacion" parent="crmsolidaridad.menu_campañas"
              />

              <menuitem name="Comedor social" id="menu_campaña_comedor_social" parent="crmsolidaridad.menu_campañas"
              />

                 <menuitem name="Campaña ropa" id="menu_campaña_ropa" parent="crmsolidaridad.menu_campañas"
              />


                 <menuitem name="Campaña alimentos" id="menu_campaña_alimentos" parent="crmsolidaridad.menu_campañas"
              />

   


          <record model="ir.ui.view" id="custom_crm_client_form_view">
      <field name="name">custom.crm.client.form</field>
      <field name="model">custom.crm.client</field>
      <field name="arch" type="xml">
        <form string="Custom CRM Client">
          <sheet>
            <group>
              <field name="name"/>
              <field name="email"/>
              <field name="phone"/>
              <field name="client_type"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>   


  </data>
</odoo>