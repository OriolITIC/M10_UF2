    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="crmsolidaridad.action_window">
      <field name="name">Pipeline</field>
      <field name="res_model">custom.crm.client</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="crmsolidaridad.action_server">
      <field name="name">CRMSolidaridad server</field>
      <field name="model_id" ref="model_crmsolidaridad_crmsolidaridad"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="CRMSolidaridad" id="crmsolidaridad.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Ventas" id="crmsolidaridad.menu_1" parent="crmsolidaridad.menu_root"/>
    <menuitem name="Clientes" id="crmsolidaridad.menu_2" parent="crmsolidaridad.menu_root"
    action="crmsolidaridad.action_window"
       />
    <menuitem name="Reuniones" id="crmsolidaridad.menu_3" parent="crmsolidaridad.menu_root"/>
     <menuitem name="Informes" id="crmsolidaridad.menu_4" parent="crmsolidaridad.menu_root"/>
    <!-- actions -->

    <menuitem name="List" id="crmsolidaridad.menu_1_list" parent="crmsolidaridad.menu_1"
              action="crmsolidaridad.action_window"/>
    <!--<menuitem name="Server to list" id="crmsolidaridad.menu_2_list" parent="crmsolidaridad.menu_2"
              action="crmsolidaridad.action_server"/>-->
    <menuitem name="Server to list" id="crmsolidaridad.menu_3_list" parent="crmsolidaridad.menu_3"
              action="crmsolidaridad.action_server"/>
    <menuitem name="Server to list" id="crmsolidaridad.menu_4_list" parent="crmsolidaridad.menu_4"
              action="crmsolidaridad.action_server"/>


          <record model="ir.ui.view" id="custom_crm_client_form_view">
      <field name="name">custom.crm.client.form</field>
      <field name="model">custom.crm.client</field>
      <field name="arch" type="xml">
        <form string="Custom CRM Client">
          <sheet>
            <group>
              <field name="name"/>
              <field name="email"/>
              <field name="phone"/>
              <field name="client_type"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>     

