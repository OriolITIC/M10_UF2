<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="crmsolidaridad.list">
      <field name="name">CRMSolidaridad list</field>
      <field name="model">crmsolidaridad.crmsolidaridad</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="crmsolidaridad.action_window">
      <field name="name">CRMSolidaridad window</field>
      <field name="res_model">crmsolidaridad.crmsolidaridad</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="crmsolidaridad.action_server">
      <field name="name">CRMSolidaridad server</field>
      <field name="model_id" ref="model_crmsolidaridad_crmsolidaridad"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="CRMSolidaridad" id="crmsolidaridad.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="crmsolidaridad.menu_1" parent="crmsolidaridad.menu_root"/>
    <menuitem name="Menu 2" id="crmsolidaridad.menu_2" parent="crmsolidaridad.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="crmsolidaridad.menu_1_list" parent="crmsolidaridad.menu_1"
              action="crmsolidaridad.action_window"/>
    <menuitem name="Server to list" id="crmsolidaridad" parent="crmsolidaridad.menu_2"
              action="crmsolidaridad.action_server"/>

  </data>
</odoo>