<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="proyecto_solidario.list">
      <field name="name">ProyectoSolidario list</field>
      <field name="model">proyecto_solidario.proyecto_solidario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="proyecto_solidario.action_window">
      <field name="name">ProyectoSolidario window</field>
      <field name="res_model">proyecto_solidario.proyecto_solidario</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="proyecto_solidario.action_server">
      <field name="name">ProyectoSolidario server</field>
      <field name="model_id" ref="model_proyecto_solidario_proyecto_solidario"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="ProyectoSolidario" id="proyecto_solidario.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="proyecto_solidario.menu_1" parent="proyecto_solidario.menu_root"/>
    <menuitem name="Menu 2" id="proyecto_solidario.menu_2" parent="proyecto_solidario.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="proyecto_solidario.menu_1_list" parent="proyecto_solidario.menu_1"
              action="proyecto_solidario.action_window"/>
    <menuitem name="Server to list" id="proyecto_solidario" parent="proyecto_solidario.menu_2"
              action="proyecto_solidario.action_server"/>

  </data>
</odoo>