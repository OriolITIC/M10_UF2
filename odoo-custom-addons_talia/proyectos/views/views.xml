        </record>

        <!-- Acciones para Notas -->
        <record id="action_nota" model="ir.actions.act_window">
            <field name="name">Notas</field>
            <field name="res_model">proyectos.nota</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para Notas -->
        <menuitem id="menu_nota" name="Notas" parent="menu_proyectos" action="action_nota"/>

        <!-- Vista de formulario para Recursos -->
        <record id="view_recurso_form" model="ir.ui.view">
            <field name="name">proyectos.recurso.form</field>
            <field name="model">proyectos.recurso</field>
            <field name="arch" type="xml">
                <form string="Recurso">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="cantidad"/>
                            <field name="proyecto_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de lista para Recursos -->
        <record id="view_recurso_tree" model="ir.ui.view">
            <field name="name">proyectos.recurso.tree</field>
            <field name="model">proyectos.recurso</field>
            <field name="arch" type="xml">
                <tree string="Recursos">
                    <field name="name"/>
                    <field name="cantidad"/>
                    <field name="proyecto_id"/>
                </tree>
            </field>
        </record>

        <!-- Acciones para Recursos -->
        <record id="action_recurso" model="ir.actions.act_window">
            <field name="name">Recursos</field>
            <field name="res_model">proyectos.recurso</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para Recursos -->
        <menuitem id="menu_recurso" name="Recursos" parent="menu_proyectos" action="action_recurso"/>

        <!-- Vista de formulario para Presupuestos -->
        <record id="view_presupuesto_form" model="ir.ui.view">
            <field name="name">proyectos.presupuesto.form</field>
            <field name="model">proyectos.presupuesto</field>
            <field name="arch" type="xml">
                <form string="Presupuesto">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="monto_estimado"/>
                            <field name="monto_real"/>
                            <field name="proyecto_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de lista para Presupuestos -->
        <record id="view_presupuesto_tree" model="ir.ui.view">
            <field name="name">proyectos.presupuesto.tree</field>
            <field name="model">proyectos.presupuesto</field>
            <field name="arch" type="xml">
                <tree string="Presupuestos">
                    <field name="name"/>
                    <field name="monto_estimado"/>
                    <field name="monto_real"/>
                    <field name="proyecto_id"/>
                </tree>
            </field>
        </record>

        <!-- Acciones para Presupuestos -->
        <record id="action_presupuesto" model="ir.actions.act_window">
            <field name="name">Presupuestos</field>
            <field name="res_model">proyectos.presupuesto</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para Presupuestos -->
        <menuitem id="menu_presupuesto" name="Presupuestos" parent="menu_proyectos" action="action_presupuesto"/>
    </data>
</odoo>
