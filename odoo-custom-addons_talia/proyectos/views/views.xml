        </record>

        <!-- Vista de lista para Notas -->
        <record id="view_nota_tree" model="ir.ui.view">
            <field name="name">proyectos.nota.tree</field>
            <field name="model">proyectos.nota</field>
            <field name="arch" type="xml">
                <tree string="Notas">
                    <field name="name"/>
                    <field name="contenido"/>
